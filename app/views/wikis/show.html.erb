<div>
  <h1>
  <%= markdown(@wiki.title) %> <br>
  <small>
  submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
  </small>
  </h1>
</div>
<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
  </br>
    <div class="py-sm-5 d-inline-block">
    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
    <% if policy(@wiki) %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', 
    data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    <% end %>
  </div>
 
  </div>
  </div> 