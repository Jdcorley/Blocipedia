<h1>Wikis</h1>
<div class="row">
  <div class="col-md-8">
  
  <% @wikis.each do |wiki| %>
  <% if policy(wiki).show? %> 
  <%= render partial: 'wiki', locals: { wiki: wiki }  %>
  <% end %>
  <% end %>
</div>
<div class="col-md-4">
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
</div>
